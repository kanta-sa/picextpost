<% unless current_user == micropost.user %> 
    <% if current_user.favorite?(micropost) %>
    <div class="unfavorite-btn-wrapper">
        <%= form_with(model: current_user.favorites.find_by(micropost_id: micropost.id), local: true, method: :delete) do |f| %>
            <%= hidden_field_tag :micropost_id, micropost.id %>
            <%= f.submit 'Unfavorite', class: 'unfavorite-btn' %>
        <% end %>
    </div>
    <% else %>
    <div class="favorite-btn-wrapper">
        <%= form_with(model: current_user.favorites.build, local: true) do |f| %>
            <%= hidden_field_tag :micropost_id, micropost.id %>
            <%= f.submit 'Favorite', class: 'favorite-btn' %>
        <% end %>
    </div>
    <% end %>
<% end %>