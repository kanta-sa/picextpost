<div class="login-container">
  <h1>ログイン</h1>
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
    <ul class="login-form">
      <li class="">
        <%= f.label :name, 'ユーザ名', class: 'form-label' %>
        <%= f.text_field :name, class: 'form-area-login' %>
      </li>
        
      <li class="">
        <%= f.label :password, 'パスワード', class: 'form-label' %>
        <%= f.password_field :password, class: 'form-area-login' %>
      </li>
    </ul>
    
    <div>  
      <%= f.submit 'ログイン', class: 'login-btn' %>
    </div>
    <% end %>
    
    <p>新規登録は<%= link_to 'こちら', signup_path, class: 'under-sign-signup' %></p>
</div>

